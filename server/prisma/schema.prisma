datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}


model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  sale        Float?
  createdAt   DateTime @default(now())
}
